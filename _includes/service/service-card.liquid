{% assign file-name = service.name | downcase | split: " " | join: "-" | append:
 "-service-illustration.svg" %}

<div class="service-card">
  {% for tag in service.tags %}
    <span class="service-card__label">{{ tag.name }}</span>
  {% endfor %}
  <div class="service-card__illustration">
    <img
      src="assets/images/service-illustrations/{{file-name}}"
      alt=""
      role="presentation" />
  </div>
  <span class="service-card__title">{{ service.name }}</span>
</div>