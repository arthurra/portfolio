<header>
  <div class="container">
    <div class="card hero-card {% if page.hero-image %}hero-card--image{% endif %}">
      <header class="card__header u-mb-500">
        <div class="tag-container u-mb-100">
          {% for tag in page.tags %}
            <div class="tag">{{ tag.name }}</div>
          {% endfor %}
        </div>
        <h1>{{ page.title }}</h1>
      </header>
      <div class="card__body">
        <div class="hero-card__layout-container">
          <div class="hero-card__description-container">
            <p class="u-mb-300">{{ page.description }}</p>
            <a href="#{{ include.link }}" class="button">
              <span class="button__icon button__icon--bounce-down">ðŸ‘‡</span>
              {{ include.cta-text }}
            </a>
          </div>
          <div class="hero-card__art-container">
            {% if page.hero-partial %}
              {% include {{ page.hero-partial }} %}
            {% elsif page.hero-image %}
              <div class="hero-card__image-container">
                <img
                  src="{{ page.hero-image }}"
                  class="hero-card__image"
                  alt=""
                  role="presentation">
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>